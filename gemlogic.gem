def on_start()
    emit "Game Started!"
    DrawBox(50, 50, 100, 100, "red")
    DrawText("Player 1", 50, 30, 15, "white")
end

def on_exit()
    emit "Closing..."
    # Logic to close or clean up could go here
end

GemApp("Gemstone Game Engine", 800, 600)

DrawBox(0, 0, 800, 600, "#222222")
DrawText("Welcome to Gemstone", 300, 20, 20, "#00FF00")

UIButton("Start Game", 350, 250, on_start)
UIButton("Exit", 350, 300, on_exit)

Run()
